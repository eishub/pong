use pongknowledge as knowledge.

module pongevents {
		if percept(ball(X,Y)), bel(ball(OX,OY)) 
			then delete(ball(OX,OY))+insert(ball(X,Y)).
		if percept(paddle(Y)), bel(paddle(OY)) 
			then delete(paddle(OY))+insert(paddle(Y)).
		if percept(score(OwnScore,OpponentScore)), bel(score(OldScore,OldOtherScore), 
			(not(OwnScore = OldScore) ; not(OpponentScore = OldOtherScore))) 
			then delete(score(OldScore,OldOtherScore)) + insert(score(OwnScore,OpponentScore)).
}
